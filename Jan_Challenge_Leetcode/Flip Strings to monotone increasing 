class Solution {
public:
    int minFlipsMonoIncr(string s) {
        int ans=0;
        int no=0;
        for(int i=0;i<s.length();i++){
            if(s[i]=='1'){
                no++;
            }
            else{
                ans++;
            }
           
          ans=min(ans,no);
        }
        return ans;
    }

}; 